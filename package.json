  "license": "Apache-2.0",
  "devDependencies": {
    "composer-admin": "^0.19.5",
    "composer-cli": "^0.19.5",
    "composer-client": "^0.19.5",
    "composer-common": "^0.19.5",
    "composer-connector-embedded": "^0.19.5",
    "composer-cucumber-steps": "^0.19.5",
    "chai": "latest",
    "chai-as-promised": "latest",
    "cucumber": "^2.2.0",
    "eslint": "latest",
    "nyc": "latest",
    "mkdirp": "latest",
    "mocha": "latest"
